{
    "profiles": {
        "NeovimWindows": {
            "cmake_generator": "Ninja",
            "build_type": "Debug",
            "compile_commands": "true",
            "cmake_args": []
        },
        "VisualStudio2022": {
            "cmake_generator": "Visual Studio 17 2022",
            "build_type": "Debug",
            "compile_commands": "false",
            "cmake_args": []
        },
        "NeovimUnix": {
            "cmake_generator": "Unix Makefiles",
            "build_type": "Debug",
            "compile_commands": "true",
            "cmake_args": []
        },
        "LinuxFuzz": {
            "cmake_generator": "Unix Makefiles",
            "build_type": "Debug",
            "compile_commands": "true",
            "cmake_args": [
                "-DFUZZTEST_FUZZING_MODE=on"
            ]
        },
        "Xcode": {
            "cmake_generator": "Xcode",
            "build_type": "Debug",
            "compile_commands": "false",
            "cmake_args": []
        }
    },

    "run_configurations": {
        "Examples": {
            "binary": "bin/NebulaExamples",
            "args": []
        },
        "CoreTests": {
            "binary": "bin/NebulaCoreTests",
            "args": []
        },
        "ShaderCLI": {
            "binary": "bin/NebulaShaderCLI",
            "args": [
                "-verbose",
                "resources/Renderer.cpp"
            ]
        },
        "ShaderCompilerTests": {
            "binary": "bin/NebulaShaderCompilerTests",
            "args": []
        }
    },

    "global_configs": {
        "working_dir": "run"
    }
}
